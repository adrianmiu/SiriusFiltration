{
    "name": "siriusphp/filtration",
    "description": "Data filtration library",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "form",
        "input",
        "filtration",
        "sanitization",
        "security"
    ],
    "authors": [
        {
            "name": "Adrian Miu",
            "email": "adrian@adrianmiu.ro"
        }
    ],
    "require": {
        "php": ">=7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "autoload": {
        "psr-4": {
            "Sirius\\Filtration\\": "src/"
        }
    },
    "scripts": {
        "cs": [
            "php phpcs.phar --standard=PSR2 ./src"
        ],
        "cbf": [
            "php phpcbf.phar ./src --standard=PSR2 -w"
        ],
        "csfix": [
            "php php-cs-fixer.phar fix ./src --rules=@PSR2"
        ],
        "build-docs": [
            "php couscous.phar generate --target=build/docs/ ./docs"
        ]
    }
}
